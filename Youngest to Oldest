#include <iostream>
using namespace std;
int main ()

{
	//Take input of age of 3 people by user and determine oldest and youngest among them.
	
	int age1, age2, age3;
	
	cout<<"Please type the first age ";
	cin>>age1;
	
	cout<<"Please type the second age ";
	cin>>age2;
	
	cout<<"Please type the third age ";
	cin>>age3;
	
	if (age1>age2 && age1>age3)
	{cout<<age1<<" is the oldest.\n";}
	else if (age2>age1 && age2>age3)
	{cout<<age2<<" is the oldest.\n";}
	else if (age3>age2 && age3>age1)
	{cout<<age3<<" is the oldest.\n";}
	
	if (age1<age2 && age1<age3)
	{cout<<age1<<" is the youngest.";}
	else if (age2<age1 && age2<age3)
	{cout<<age2<<" is the youngest.";}
	else if (age3<age2 && age3<age1)
	{cout<<age3<<" is the youngest.";}
	return 0;
	
	
	}
